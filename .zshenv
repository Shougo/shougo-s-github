#---- Environment variables ------------#
export EDITOR=nvim
export FCEDIT=nvim
export PAGER=less
export LESS='-RQM'
export BROWSER='firefox'
export SHELL=zsh
export MANPAGER='nvim --clean +Man\!'
export UNZIP='-I utf8 -O cp932'
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export GOPATH="$HOME/.go"
export PATH="$HOME/bin:/usr/local/bin:$GOPATH/bin:$HOME/.cargo/bin:$HOME/.deno/bin:$PATH"
export XDG_CONFIG_HOME=$HOME/.config

export NEXTWORD_DATA_PATH=$HOME/Downloads/nextword-data-large
export MOCWORD_DATA=$HOME/Downloads/mocword.sqlite
